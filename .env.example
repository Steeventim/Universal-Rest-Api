# Framework à utiliser (express, fastify)
FRAMEWORK=express

# Port du serveur
PORT=3001

# Clé secrète JWT (changez cette valeur en production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Environnement
NODE_ENV=development

# API Key pour authentification alternative
API_KEY=your-api-key-here

# Base de données (optionnel)
# DATABASE_URL=mongodb://localhost:27017/universal-api
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=universal_api
# DATABASE_USER=user
# DATABASE_PASSWORD=password

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGIN=*

# Swagger Settings
SWAGGER_TITLE=Universal REST API
SWAGGER_VERSION=1.0.0
SWAGGER_DESCRIPTION=A universal REST API template for Node.js frameworks